<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_purple" /> <!-- Keep light purple background -->
            <corners android:radius="10dp" />
            <stroke android:color="@color/black" android:width="2dp" /> <!-- Black border when focused -->
        </shape>
    </item>

    <!-- Default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_purple" /> <!-- Light purple background when not focused -->
            <corners android:radius="10dp" />
            <stroke android:color="@color/black" android:width="1dp" /> <!-- Light purple border when not focused -->
        </shape>
    </item>

</selector>

